{
  "name": "GrumpyPiCast",
  "version": "2",
  "manifest_version": 2,
  "icons": {
    "16": "desktop.png",
    "128": "desktop.png"
  },
  "app": {
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  },
  "sockets": {
    "tcpServer": {
      "listen": "*"
    }
  },
  "permissions": [
    "webview",
    "system.network"
  ]
}
